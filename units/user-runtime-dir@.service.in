[Unit]
Description=/run/user/%i mount wrapper
StopWhenUnneeded=yes

[Service]
ExecStart=@rootlibexecdir@/systemd-user-runtime-dir start %i
ExecStop=@rootlibexecdir@/systemd-user-runtime-dir stop %i
RemainAfterExit=true
Slice=user-%i.slice
